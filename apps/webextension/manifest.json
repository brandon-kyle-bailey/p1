{
  "manifest_version": 2,
  "name": "webextension",
  "description": "webextension description",
  "version": "1.0.0",
  "permissions": ["tabs", "storage", "<all_urls>"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
