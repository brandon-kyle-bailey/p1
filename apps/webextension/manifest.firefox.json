{
  "manifest_version": 2,
  "name": "webextension",
  "version": "1.0.0",
  "permissions": ["idle", "tabs", "storage", "<all_urls>"],
  "background": {
    "scripts": ["browser-polyfill.js", "background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["browser-polyfill.js", "content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
